# --------------------------------------------------
# MetaSAAS Environment Variables
# Copy this file to .env and fill in your values.
# --------------------------------------------------

# PostgreSQL
POSTGRES_USER=metasaas
POSTGRES_PASSWORD=metasaas
POSTGRES_DB=metasaas
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Derived database URL used by Drizzle ORM
DATABASE_URL=postgresql://metasaas:metasaas@localhost:5433/metasaas

# API Server
API_PORT=4000
API_HOST=0.0.0.0

# Web Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000

# CORS — comma-separated origins allowed to call the API
# CORS_ORIGIN=http://localhost:3000

# --------------------------------------------------
# Supabase Auth (optional — app works without it, uses dev mode)
# --------------------------------------------------
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_KEY=your-service-role-key
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# --------------------------------------------------
# AI Gateway (optional — app works without it)
#
# AI_PROVIDER: gemini | openai | anthropic
# If omitted, auto-detects by checking which key is set.
# --------------------------------------------------
# AI_PROVIDER=gemini
# GOOGLE_AI_API_KEY=your-google-ai-key
# OPENAI_API_KEY=sk-your-openai-key
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# --------------------------------------------------
# Production (used by docker-compose.prod.yml)
# --------------------------------------------------
# WEB_PORT=3000
# API_PORT=4000
